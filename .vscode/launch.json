      "flutterMode": "debug",
      "program": "lib/main_development.dart",
      "args": [
        "--flavor",
        "development"
      ]
    },
    {
      "name": "Flutter Test",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "program": "lib/main_staging.dart",
      "args": [
        "--flavor",
        "staging"
      ]
    },
    {
      "name": "Flutter Production",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "program": "lib/main_production.dart",
      "args": [
        "--flavor",
        "production"
      ]
    }
